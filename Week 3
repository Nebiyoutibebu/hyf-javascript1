function vehicle (color,code,age){
    if (age===0){
        if(code===1){
            console.log("A "+color+" new car");
        }
        else if(code===2) {
            console.log("A "+color+" new motorbike");
        }
        }
    else if(age>0){
        if(code===1){
            console.log("A "+color+" used car");
        }
        else if(code===2) {
            console.log("A "+color+" used motorbike");
        }
        }
    }
    vehicle("blue", 1, 5);
