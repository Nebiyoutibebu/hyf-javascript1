function vehicle (color,code,age){
    if (age===1){
        if(code===1){
            console.log("A "+color+" new car");
        }
        else if(code===3) {
            console.log("A "+color+" bike");
        }
        }
    else if(age>1){
        if(code===1){
            console.log("A "+color+" used car");
        }
        else if(code===3) {
            console.log("A "+color+" used bike");
        }
        }
    }
    vehicle("green", 3, 1)
